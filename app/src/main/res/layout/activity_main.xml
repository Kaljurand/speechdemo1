<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_settings_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_settings_app" />

    <Button
        android:id="@+id/button_settings_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_settings_service" />

    <Button
        android:id="@+id/button_settings_voice_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_settings_voice_input" />
</LinearLayout>